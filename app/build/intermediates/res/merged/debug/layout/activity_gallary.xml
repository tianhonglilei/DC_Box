<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gallary_bg" >

    <ImageView
        android:id="@+id/iv_viewImagView"
        android:layout_width="870dp"
        android:layout_height="480dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="3dp"
        android:visibility="gone" />

    <VideoView
        android:id="@+id/vv_introduction"
        android:layout_width="870dp"
        android:layout_height="480dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="3dp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/llayout_item"
        android:layout_width="370dp"
        android:layout_height="480dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp" >

        <ListView
            android:id="@+id/lv_adItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:footerDividersEnabled="false"
            android:transcriptMode="alwaysScroll" >
        </ListView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gallary_bom"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_gallary_bm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/gallary_bm" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left|center" >

            <GridView
                android:id="@+id/main_grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:numColumns="auto_fit"
                android:stackFromBottom="true"
                android:stretchMode="spacingWidthUniform"
                android:transcriptMode="alwaysScroll" >
            </GridView>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="210dp" >

        <ImageView
            android:id="@+id/iv_tui"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="4dp" >
        </ImageView>

        <TextView
            android:id="@+id/tv_gridtui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:text="点创推荐"
            android:textColor="#FF6737"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/ib_gallary_app"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="140dp"
        android:layout_marginRight="30dp"
        android:visibility="gone"
        android:background="@drawable/btn_more_app_selector" />

    <Button
        android:id="@+id/ib_gallary_pro"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="120dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/btn_more_pro_selector" />

    <Button
        android:id="@+id/btn_ceshi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="400dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/helpclose_press"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="300dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/helpclose_press"
        android:visibility="gone" />

</RelativeLayout>