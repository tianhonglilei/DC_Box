            android:id="@+id/llayout_llayout_huodao_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="2"
            android:background="#f5f5f5"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_huodao_one"
                android:layout_width="80dp"
                android:layout_height="170dp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llayout_llayout_huodao_one_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_huodao_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp"
                android:text="1货道"
                android:textColor="#ff7f00"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_huodao_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:background="@drawable/jiance_btn" />
        </LinearLayout>
    </LinearLayout>

