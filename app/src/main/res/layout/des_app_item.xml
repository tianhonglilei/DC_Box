<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/desappitem_layone"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/desappitemsbg"
            android:descendantFocusability="beforeDescendants" >

            <TextView
                android:id="@+id/desappitem_tv_name_one"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/desappitem_iv_logo_one"
                android:layout_marginTop="10dip"
                android:gravity="center_horizontal"
                android:text="正有紫菜花生"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/desappitem_tv_price_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/desappitem_tv_name_one"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:drawablePadding="2dp"
                android:drawableRight="@drawable/coin"
                android:text="4"
                android:textColor="@color/oranger" />

            <ImageView
                android:id="@+id/desappitem_iv_logo_one"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dip"
                android:gravity="center_horizontal" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/desappitem_laytwo"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/desappitemsbg"
            android:descendantFocusability="beforeDescendants" >

            <TextView
                android:id="@+id/desappitem_tv_name_two"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/desappitem_iv_logo_two"
                android:layout_marginTop="10dip"
                android:gravity="center_horizontal"
                android:text="正有紫菜花生"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/desappitem_tv_price_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/desappitem_tv_name_two"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:drawablePadding="2dp"
                android:drawableRight="@drawable/coin"
                android:text="4"
                android:textColor="@color/oranger" />

            <ImageView
                android:id="@+id/desappitem_iv_logo_two"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dip"
                android:gravity="center_horizontal" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/desappitem_laythree"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/desappitemsbg"
            android:descendantFocusability="beforeDescendants" >

            <TextView
                android:id="@+id/desappitem_tv_name_three"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/desappitem_iv_logo_three"
                android:layout_marginTop="10dip"
                android:gravity="center_horizontal"
                android:text="正有紫菜花生"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/desappitem_tv_price_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/desappitem_tv_name_three"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:drawablePadding="2dp"
                android:drawableRight="@drawable/coin"
                android:text="4"
                android:textColor="@color/oranger" />

            <ImageView
                android:id="@+id/desappitem_iv_logo_three"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dip"
                android:gravity="center_horizontal" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>