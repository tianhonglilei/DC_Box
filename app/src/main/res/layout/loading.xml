<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loadback" >

    <ImageView
        android:id="@+id/splsh_iv_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:background="@drawable/open1" />

    <ImageView
        android:id="@+id/splsh_iv_two"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_below="@+id/splsh_iv_one"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splsh_iv_two"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="版本号: 1.0"
        android:textColor="@color/gray"
        android:textSize="20sp" />

</RelativeLayout>